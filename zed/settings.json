{
  "outline_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "right"
  },
  "features": {
    "inline_completion_provider": "none"
  },
  "assistant": {
    "dock": "right",
    "default_model": {
      "provider": "ollama",
      "model": "llama3.2:latest",
      "low_speed_timeout_in_seconds": 60
    },
    "version": "2"
  },
  "ui_font_size": 14,
  "buffer_font_size": 13,
  "buffer_font_family": "Fira Code",
  "ui_font_family": "Fira Code",
  "theme": {
    "mode": "system",
    "light": "Tokyo Night",
    "dark": "One Dark"
  },
  "vim_mode": false,
  "vim": {
    "use_system_clipboard": "always"
  },
  "languages": {
    "Python": {
      "language_servers": ["ruff", "!basedpyright", "!pyright"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    }
  }
}
